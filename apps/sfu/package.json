    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "zod": "^3.22.4",
    "uuid": "^9.0.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "ws": "^8.16.0"
